<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="Самогон" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/readingTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewStart"
            app:drawableStartCompat="@drawable/ic_baseline_access_time_16"
            android:drawablePadding="5dp"
            tools:text="1488 минут" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewStart"
            app:drawableStartCompat="@drawable/ic_baseline_bar_chart_16"
            android:drawablePadding="5dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="98%" />

        <TextView
            android:id="@+id/voted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewStart"
            app:drawableStartCompat="@drawable/ic_baseline_people_alt_16"
            android:drawablePadding="5dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="99" />
    </LinearLayout>

</LinearLayout>